<%= if get_flash(@conn, :info) do %>
  <div class="bg-blue-lightest text-blue-dark px-4 py-3" role="alert">
    <p class="container mx-auto text-sm">
      <%= get_flash(@conn, :info) %>
    </p>
  </div>
<% end %>

<%= if get_flash(@conn, :error) do %>
  <div class="bg-red-lightest text-red-dark px-4 py-3" role="alert">
    <p class="container mx-auto text-sm">
      <%= get_flash(@conn, :error) %>
    </p>
  </div>
<% end %>